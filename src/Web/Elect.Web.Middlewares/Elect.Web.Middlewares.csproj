<Project Sdk="Microsoft.NET.Sdk">
    <!-- Information -->
    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <TargetFramework>netstandard2.0</TargetFramework>
        <!-- Generate XML file -->
        <DocumentationFile>Elect.Web.Middlewares.xml</DocumentationFile>
        <!-- Disable warning for Controller/Action/Method not have block comment -->
        <NoWarn>1701;1702;1705;1591</NoWarn>
        <!-- Output -->
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath>.\bin\</OutputPath>
    </PropertyGroup>
    <ItemGroup>
        <!-- Copy to Ouput -->
        <Content Include="Elect.Web.Middlewares.xml">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    <!-- Nuget -->
    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageOutputPath>..\..\..\build\Web</PackageOutputPath>
        <NuspecFile>..\..\..\nuspecs\Web\Elect.Web.Middlewares.nuspec</NuspecFile>
    </PropertyGroup>
    <!-- Elect -->
    <ItemGroup>
        <ProjectReference Include="..\Elect.Web\Elect.Web.csproj" />
    </ItemGroup>
    <!-- 3rd Libraries -->
    <ItemGroup>
        <!-- Markup Min -->
        <PackageReference Include="WebMarkupMin.AspNetCore2" Version="2.6.0" />
        <PackageReference Include="WebMarkupMin.NUglify" Version="2.6.0" />
    </ItemGroup>
</Project>