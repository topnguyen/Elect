<Project Sdk="Microsoft.NET.Sdk">
  <!-- Information -->
  <PropertyGroup>
    <LangVersion>7.1</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!-- Nuget -->
  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageOutputPath>..\..\..\build\Web</PackageOutputPath>
    <NuspecFile>..\..\..\nuspecs\Web\Elect.Web.HttpDetection.nuspec</NuspecFile>
  </PropertyGroup>

  <!-- Elect -->
  <ItemGroup>
    <ProjectReference Include="..\..\Data\Elect.Data.IO\Elect.Data.IO.csproj" />
    <ProjectReference Include="..\..\Elect.Core\Elect.Core.csproj" />
    <ProjectReference Include="..\Elect.Web\Elect.Web.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- GEO -->
    <Content Include="GeoCity.mmdb">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- 3rd Libraries -->
  <ItemGroup>
    <PackageReference Include="MaxMind.GeoIP2" Version="2.10.0" />
  </ItemGroup>
</Project>